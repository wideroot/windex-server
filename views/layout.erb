<html>
  <head>
    <title>windex</title>
  </head>
  <body>
    <div>
      <ul>
        <li><a href="<%= url('/api/list/files') %>">Files</a></li>
        <% if @user %>
          <li><a href="<%= url("/api/user/#{@user.username}") %>"><%= @user.username %></a></li>
          <li><a href="<%= url('/sign_out') %>">Sign Out</a></li>
        <% else %>
          <li><a href="<%= url('/sign_in') %>">Sign In</a></li>
          <li><a href="<%= url('/sign_up') %>">Sign Up</a></li>
        <% end %>
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
